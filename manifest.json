{
  "manifest_version": 3,
  "name": "CousiGites",
  "version": "2",
  "description": "Permet, au cours de la navigation sur des sites de gites, de voir en direct la distance entre un g√Æte et les maisons des uns des autres",
  "permissions": [
    "scripting", "activeTab", "storage"
  ],
  "host_permissions": [
    "https://www.grandsgites.com/*"
  ],
  "action": {
    "default_icon": "images/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.grandsgites.com/*", "https://www.gites.fr/*"],
      "js": [
        "private/methods.js",
        "coords-extraction/methods.js", "coords-extraction/site-configs.js","coords-extraction/strategies.js",
        "methods-toolbox/api-handling.js",  "methods-toolbox/cache.js","methods-toolbox/data-management.js",
        "methods-toolbox/helper-methods.js", "methods-toolbox/locations.js",
        "message_handling.js","content.js"
      ]
    }
  ],
  "web_accessible_resources": [
      {
        "resources": ["constants.json","private/data.json"],
        "matches": ["<all_urls>"]
      },
      {
        "resources":["panel/panel.html"],
        "matches":["<all_urls>"]
      }
    ]
}