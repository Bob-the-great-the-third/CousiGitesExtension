{
  "manifest_version": 3,
  "name": "CousiGites",
  "version": "1.0",
  "description": "Permet, au cours de la navigation sur des sites de gites, voir en direct la distance entre un g√Æte et les maisons des uns des autres",
  "permissions": [
    "scripting", "activeTab", "storage"
  ],
  "host_permissions": [
    "https://www.grandsgites.com/*"
  ],
  "action": {
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.grandsgites.com/*"],
      "js": ["helper-methods.js","content.js"]
    }
  ],
  "web_accessible_resources": [
      {
        "resources": ["general-constants.json","private/data.json"],
        "matches": ["<all_urls>"]
      },
      {
        "resources":["panel/panel.html"],
        "matches":["<all_urls>"]
      }
    ]
}
